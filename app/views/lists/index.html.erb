<p id="notice"><%= notice %></p>

<h1>My Todo List</h1>

<table class="table table-bordered">


  <tbody>
    <% @lists.each do |list| %>
      <% if list.completed %>
      <tr class="table-primary">
        <td class="striker"><%= list.description %></td>
        <td>
        <% link_to 'Show', list %>
        <%= link_to 'Edit', edit_list_path(list) %>
        <%= link_to 'Destroy', list, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
      <% else %>
      <tr>
        <td><%= list.description %></td>
        <td>
        <% link_to 'Show', list %>
        <%= link_to 'Edit', edit_list_path(list) %>
        <%= link_to 'Destroy', list, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
    
    
  <% end %>  
  </tbody>
</table>

<br>

<%= link_to 'Add Todo Item', new_list_path, class: 'btn btn-secondary' %>
